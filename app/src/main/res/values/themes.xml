<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Transparent status bar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="chipStyle">@style/Custom.Chips</item>
    </style>

    <style name="Theme.FoodMarket" parent="Base.Theme.FoodMarket" />

    <!-- Custom Style Chips-->
    <style name="Custom.Chips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_choice_chip_background_color</item>
        <item name="android:textColor">@color/custom_choice_chip_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:layout_width">94dp</item>
    </style>

    <!--  BottomNav Style Custom  -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="bottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">#3364E0</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">#A5A9B2</item>
    </style>
</resources>